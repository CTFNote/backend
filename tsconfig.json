{
  "compilerOptions": {
    "moduleResolution": "node",

    "target": "es2020",
    "lib": ["ES2020"],
    "module": "commonjs",

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,

    "outDir": "dist",
    "rootDir": "src",
  }
}
